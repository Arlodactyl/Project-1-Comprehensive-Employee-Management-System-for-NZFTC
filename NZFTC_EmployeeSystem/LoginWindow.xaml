<Window x:Class="NZFTC_EmployeeSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="NZFTC Employee Management System - Login" 
        Height="600" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#E3F2FD">

    <Grid>
        <!-- Main Login Card -->
        <materialDesign:Card Margin="40" 
                            Padding="0"
                            VerticalAlignment="Center"
                            UniformCornerRadius="8">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Section (Blue) -->
                <materialDesign:ColorZone Mode="PrimaryMid" 
                                         Padding="32"
                                         Grid.Row="0"
                                         CornerRadius="8 8 0 0">
                    <StackPanel>
                        <TextBlock Text="NZFTC" 
                                  FontSize="42" 
                                  FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  Foreground="White"
                                  Margin="0,0,0,8"/>

                        <TextBlock Text="Employee Management System" 
                                  FontSize="14"
                                  HorizontalAlignment="Center"
                                  Foreground="White"
                                  Opacity="0.9"
                                  Margin="0,0,0,4"/>

                        <TextBlock Text="Secure Login Portal" 
                                  FontSize="12"
                                  HorizontalAlignment="Center"
                                  Foreground="White"
                                  Opacity="0.7"/>
                    </StackPanel>
                </materialDesign:ColorZone>

                <!-- Form Section (White) -->
                <StackPanel Grid.Row="1" 
           Margin="40,32,40,40">

                    <!-- Welcome Text -->
                    <TextBlock Text="Welcome Back" 
                              FontSize="20"
                              FontWeight="SemiBold"
                              Foreground="#1976D2"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,8"/>

                    <TextBlock Text="Please login to continue" 
                              FontSize="13"
                              Foreground="Gray"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,32"/>

                    <!-- Email Input -->
                    <TextBox x:Name="EmailTextBox"
                            materialDesign:HintAssist.Hint="Email Address"
                            materialDesign:HintAssist.FloatingScale="0.75"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            FontSize="14"
                            Height="56"
                            Margin="0,0,0,20">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding LoginCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- Password Input -->
                    <PasswordBox x:Name="PasswordBox"
                                materialDesign:HintAssist.Hint="Password"
                                materialDesign:HintAssist.FloatingScale="0.75"
                                Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                FontSize="14"
                                Height="56"
                                Margin="0,0,0,24">
                        <PasswordBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding LoginCommand}"/>
                        </PasswordBox.InputBindings>
                    </PasswordBox>

                    <!-- Login Button -->
                    <Button x:Name="LoginButton"
                           Content="LOGIN"
                           Click="LoginButton_Click"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Height="48"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,16"/>

                    <!-- Error Message (Hidden by default) -->
                    <Border x:Name="ErrorBorder"
                           Background="#FFEBEE"
                           BorderBrush="#EF5350"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="12"
                           Margin="0,0,0,0"
                           Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle"
                                                    Width="20"
                                                    Height="20"
                                                    Foreground="#D32F2F"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,8,0"/>
                            <TextBlock x:Name="ErrorMessage"
                                      Foreground="#D32F2F"
                                      FontSize="13"
                                      TextWrapping="Wrap"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Test Credentials Info -->
                    <Border Background="#E8F5E9"
                           BorderBrush="#81C784"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="12"
                           Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="Test Credentials:" 
                                      FontSize="11"
                                      FontWeight="Bold"
                                      Foreground="#2E7D32"
                                      Margin="0,0,0,4"/>
                            <TextBlock FontSize="10" Foreground="#388E3C">
                                <Run Text="Admin: "/>
                                <Run Text="admin@nzftc.co.nz / admin123" FontWeight="SemiBold"/>
                            </TextBlock>
                            <TextBlock FontSize="10" Foreground="#388E3C">
                                <Run Text="Employee: "/>
                                <Run Text="employee@nzftc.co.nz / emp123" FontWeight="SemiBold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>

            </Grid>
        </materialDesign:Card>

        <!-- Footer -->
        <TextBlock Text="© 2025 NZFTC. All rights reserved."
                  FontSize="10"
                  Foreground="Gray"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,16"
                  Opacity="0.6"/>

    </Grid>
</Window>