<!-- 
    App.xaml - Application Entry Point
    This file is the starting point of the entire application.
    It loads all the themes and defines which window opens first.
-->
<Application x:Class="NZFTC_EmployeeSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="Views/LoginWindow.xaml">

    <!-- 
        StartupUri tells the app which window to show when it starts
        In our case, it's the LoginWindow
    -->

    <Application.Resources>
        <!-- 
            Application.Resources contains all the styles and themes
            that will be available throughout the entire application
        -->
        <ResourceDictionary>
            <!-- 
                MergedDictionaries combines multiple resource files
                This is where we load MaterialDesign themes
            -->
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    BundledTheme loads the MaterialDesign theme
                    BaseTheme="Light" means light mode (not dark mode)
                    PrimaryColor="Blue" sets the main color scheme
                    SecondaryColor="Lime" sets the accent color
                -->
                <materialDesign:BundledTheme BaseTheme="Light" 
                                            PrimaryColor="Blue" 
                                            SecondaryColor="Lime" />

                <!-- 
                    This loads the default MaterialDesign styles
                    It includes button styles, text styles, etc.
                -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>