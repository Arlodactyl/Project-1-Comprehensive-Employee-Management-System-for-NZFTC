<Window x:Class="NZFTC_EmployeeSystem.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         Title="NZFTC Employee System - Sign In"
        Width="520" Height="360"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Segoe UI"
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- header -->
        <StackPanel>
            <TextBlock Text="Welcome" Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
            <TextBlock Text="Sign in to continue" Margin="0,6,0,0"
                       Foreground="{DynamicResource MaterialDesignBodyMediumBrush}" />
        </StackPanel>

        <!-- form -->
        <materialDesign:Card Grid.Row="1" Padding="24" UniformCornerRadius="16">
            <StackPanel>
                <TextBox x:Name="UserNameBox"
                         materialDesign:HintAssist.Hint="Username" />
                <PasswordBox x:Name="PasswordBox" Margin="0,8,0,0"
                             materialDesign:HintAssist.Hint="Password" />
                <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Right">
                    <Button Content="Cancel" Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0" Click="Cancel_Click"/>
                    <Button Content="Sign in" Style="{StaticResource MaterialDesignRaisedButton}"
                            IsDefault="True" Click="SignIn_Click"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- footer -->
        <TextBlock Grid.Row="2" Text="© NZFTC • Employee Management System"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource MaterialDesignBodySmallBrush}"
                   Margin="0,12,0,0"/>
    </Grid>
</Window>

