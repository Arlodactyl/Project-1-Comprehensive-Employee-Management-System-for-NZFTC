<Window x:Class="NZFTC_EmployeeSystem.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="NZFTC Employee System - Sign In"
        Width="520" Height="360"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- header -->
        <StackPanel>
            <TextBlock Text="Welcome" FontSize="32" FontWeight="Bold" />
            <TextBlock Text="Sign in to continue" Margin="0,6,0,0"
                       Foreground="Gray" FontSize="14" />
        </StackPanel>

        <!-- form -->
        <Border Grid.Row="1" 
                Padding="24" 
                Margin="0,20,0,0"
                Background="#F5F5F5"
                CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Username" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="UserNameBox"
                         Height="35"
                         Padding="8"
                         FontSize="14"/>

                <TextBlock Text="Password" Margin="0,16,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="35"
                             Padding="8"
                             FontSize="14"/>

                <StackPanel Orientation="Horizontal" Margin="0,24,0,0" HorizontalAlignment="Right">
                    <Button Content="Cancel" 
                            Width="100"
                            Height="35"
                            Margin="0,0,8,0" 
                            Click="Cancel_Click"
                            Background="Gray"
                            Foreground="White"
                            BorderThickness="0"/>
                    <Button Content="Sign in" 
                            Width="100"
                            Height="35"
                            IsDefault="True" 
                            Click="SignIn_Click"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- footer -->
        <TextBlock Grid.Row="2" 
                   Text="© NZFTC • Employee Management System"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   FontSize="12"
                   Margin="0,12,0,0"/>
    </Grid>
</Window>