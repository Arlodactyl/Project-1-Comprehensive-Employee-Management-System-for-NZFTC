<Window x:Class="NZFTC_EmployeeSystem.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
        mc:Ignorable="d"
        Title="NZFTC Employee Login" 
        Height="600" 
        Width="500"
        MinHeight="600"
        MinWidth="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <!-- Text Box Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Password Box Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="LoginButton" TargetType="Button">
            <Setter Property="Background" Value="#5DADE2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo -->
        <Border Grid.Row="0" Background="#2C3E50" Height="200">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Images/logo.png" 
                       Height="100" 
                       Width="200"
                       Stretch="Uniform"
                       Margin="0,0,0,15"/>
                <TextBlock Text="Employee Management System for NZFTC Project"
                           Foreground="White"
                           FontSize="13"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" 
                    Margin="50,40"
                    VerticalAlignment="Top">

            <TextBlock Text="Login Page"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>

            <!-- Username -->
            <TextBlock Text="Username" 
                       FontSize="14" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="UserNameBox" 
                     Style="{StaticResource ModernTextBox}"
                     Margin="0,0,0,20"/>

            <!-- Password -->
            <TextBlock Text="Password" 
                       FontSize="14" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         Style="{StaticResource ModernPasswordBox}"
                         Margin="0,0,0,30"/>

            <!-- Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Sign In" 
                        Style="{StaticResource LoginButton}"
                        Click="SignIn_Click"/>

                <Button Grid.Column="2"
                        Content="Cancel" 
                        Style="{StaticResource CancelButton}"
                        Click="Cancel_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>