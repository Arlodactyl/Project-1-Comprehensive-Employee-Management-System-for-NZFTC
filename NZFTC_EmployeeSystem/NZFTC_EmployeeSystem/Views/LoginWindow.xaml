<!-- 
    LoginWindow.xaml - Login Screen
    This is the first window that shows when the app starts
    Users enter their username and password here
-->
<Window x:Class="NZFTC_EmployeeSystem.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="NZFTC Employee System - Login"
        Width="450" Height="550"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        ResizeMode="NoResize">

    <!-- Main container -->
    <Grid>
        <!-- Center the login card -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Login Card -->
        <materialDesign:Card Grid.Row="1" 
                            Padding="32" 
                            Margin="20"
                            UniformCornerRadius="16">
            <StackPanel>
                <!-- Logo/Title Section -->
                <TextBlock Text="NZFTC"
                          FontSize="32"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Foreground="{DynamicResource PrimaryHueMidBrush}"
                          Margin="0,0,0,8"/>

                <TextBlock Text="Employee Management System"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          Foreground="{DynamicResource MaterialDesignBodyLight}"
                          Margin="0,0,0,32"/>

                <!-- Username Field -->
                <TextBlock Text="Username"
                          Margin="0,0,0,8"
                          FontWeight="Medium"/>

                <TextBox x:Name="UserNameBox"
                        materialDesign:HintAssist.Hint="Enter your username"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Margin="0,0,0,16"
                        FontSize="14"/>

                <!-- Password Field -->
                <TextBlock Text="Password"
                          Margin="0,0,0,8"
                          FontWeight="Medium"/>

                <PasswordBox x:Name="PasswordBox"
                            materialDesign:HintAssist.Hint="Enter your password"
                            Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                            Margin="0,0,0,24"
                            FontSize="14"/>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cancel Button -->
                    <Button Grid.Column="0"
                           Content="CANCEL"
                           Click="Cancel_Click"
                           Style="{StaticResource MaterialDesignOutlinedButton}"
                           Height="40"/>

                    <!-- Sign In Button -->
                    <Button Grid.Column="2"
                           Content="SIGN IN"
                           Click="SignIn_Click"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Height="40"/>
                </Grid>

                <!-- Default Credentials Info -->
                <Border Background="{DynamicResource MaterialDesignDivider}"
                       Padding="12"
                       Margin="0,24,0,0"
                       CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Default Login Credentials:"
                                  FontWeight="Bold"
                                  FontSize="12"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Username: admin"
                                  FontSize="11"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="Password: admin123"
                                  FontSize="11"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>