<Page x:Class="NZFTC_EmployeeSystem.Views.DepartmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Department Management">

    <Page.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Delete Button Style - matching ActionButton -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- View Button Style - matching ActionButton -->
        <Style x:Key="ViewButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Info Button -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <TextBlock Text="Department Management" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <!-- Info Button in Header -->
                <Button Content="i"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="35"
                        Height="35"
                        Click="HelpButton_Click"
                        ToolTip="Departments Help">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content with Two Columns -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- LEFT SIDE: Departments List -->
            <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="3">
                <!-- Instructions -->
                <TextBlock Text="Manage company departments. Click 'View' to see who's assigned to each department."
                           FontSize="13"
                           Foreground="#7F8C8D"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"/>

                <!-- Departments DataGrid -->
                <DataGrid x:Name="DepartmentGrid"
                          Height="300"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          AlternatingRowBackground="#ECF0F1"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Margin="0,0,0,20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Department Name" Binding="{Binding Name}" Width="*"/>
                        <!-- Actions column with View and Delete buttons - matching styles -->
                        <DataGridTemplateColumn Header="Actions" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="View"
                                                Tag="{Binding Id}"
                                                Click="ViewEmployees_Click"
                                                Style="{StaticResource ViewButton}"
                                                Width="70"
                                                Padding="8,4"
                                                Margin="0,0,5,0"/>
                                        <Button Content="Delete"
                                                Tag="{Binding Id}"
                                                Click="DeleteDepartment_Click"
                                                Style="{StaticResource DeleteButton}"
                                                Width="70"
                                                Padding="8,4"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Add Department Form - Improved alignment -->
                <Border Background="#F8F9FA" 
                        Padding="20"
                        CornerRadius="5"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <TextBlock Grid.Row="0"
                                   Text="Add New Department" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,15"/>

                        <!-- Input and Button Grid -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left: Input -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Department Name:" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="DepartmentNameTextBox"
                                         Height="35"
                                         FontSize="13"
                                         Padding="8"
                                         VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- Right: Button - Aligned to bottom -->
                            <Button Grid.Column="2"
                                    Content="Add Department"
                                    Click="AddDepartment_Click"
                                    Style="{StaticResource ActionButton}"
                                    Width="150"
                                    Height="35"
                                    VerticalAlignment="Bottom"/>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- RIGHT SIDE: Employees in Selected Department -->
            <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="3">
                <!-- Department Employees Section Header -->
                <TextBlock x:Name="DepartmentEmployeesTitle"
                           Text="Select a department to view employees"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>

                <!-- Employee Count -->
                <TextBlock x:Name="EmployeeCountText"
                           Text=""
                           FontSize="13"
                           Foreground="#7F8C8D"
                           Margin="0,0,0,15"/>

                <!-- Employees DataGrid -->
                <DataGrid x:Name="EmployeesGrid"
                          Height="400"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          AlternatingRowBackground="#ECF0F1"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="Job Title" Binding="{Binding JobTitle}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
