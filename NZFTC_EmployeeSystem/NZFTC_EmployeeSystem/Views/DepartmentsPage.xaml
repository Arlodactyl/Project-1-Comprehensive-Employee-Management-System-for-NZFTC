<Page x:Class="NZFTC_EmployeeSystem.Views.DepartmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Department Management">

    <Page.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <TextBlock Text="Department Management" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Instructions -->
            <TextBlock Grid.Row="0"
                       Text="Manage company departments. You can add new departments or delete existing ones (if they have no employees assigned)."
                       FontSize="13"
                       Foreground="#7F8C8D"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>

            <!-- Departments DataGrid -->
            <DataGrid x:Name="DepartmentGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      AlternatingRowBackground="#ECF0F1"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Department ID" Binding="{Binding Id}" Width="120"/>
                    <DataGridTextColumn Header="Department Name" Binding="{Binding Name}" Width="*"/>
                    <!-- Actions column with Delete button -->
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete"
                                        Tag="{Binding Id}"
                                        Click="DeleteDepartment_Click"
                                        Style="{StaticResource DeleteButton}"
                                        Padding="10,5"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Add Department Form -->
            <Border Grid.Row="2" 
                    Background="#F8F9FA" 
                    Padding="20"
                    CornerRadius="5"
                    BorderBrush="#BDC3C7"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Add New Department" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="Department Name:" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="DepartmentNameTextBox"
                                     Width="300"
                                     Height="35"
                                     FontSize="13"
                                     Padding="8"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <Button Content="Add Department"
                                Click="AddDepartment_Click"
                                Style="{StaticResource ActionButton}"
                                Width="150"
                                VerticalAlignment="Bottom"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
