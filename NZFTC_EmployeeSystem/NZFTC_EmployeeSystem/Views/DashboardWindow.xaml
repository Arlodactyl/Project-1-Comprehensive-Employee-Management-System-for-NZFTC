<Window x:Class="NZFTC_EmployeeSystem.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="NZFTC Employee Management System"
        Width="1200" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Top bar -->
            <RowDefinition Height="Auto"/>
            <!-- Main content area -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR - Shows who's logged in and logout button -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryDark" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Welcome message -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="NZFTC Employee System" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="WelcomeText"
                               Text="Welcome, User" 
                               FontSize="16" 
                               Foreground="White"
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Logout button -->
                <Button Grid.Column="1"
                        Content="LOGOUT"
                        Click="Logout_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"/>
            </Grid>
        </materialDesign:ColorZone>

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Left side menu -->
                <ColumnDefinition Width="250"/>
                <!-- Right side content -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT SIDE MENU - Navigation buttons -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource MaterialDesignDarkBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,0,1,0">
                <StackPanel Margin="0,20,0,0">

                    <!-- Dashboard button -->
                    <Button Content="Dashboard"
                            Click="Dashboard_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <!-- My Profile button (all users) -->
                    <Button Content="My Profile"
                            Click="MyProfile_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <!-- Leave Management button -->
                    <Button Content="Leave Management"
                            Click="LeaveManagement_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <!-- Payroll button -->
                    <Button Content="Payroll"
                            Click="Payroll_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <!-- Holidays button -->
                    <Button Content="Holidays"
                            Click="Holidays_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <!-- Grievances button -->
                    <Button Content="Grievances"
                            Click="Grievances_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <!-- Separator -->
                    <Separator Margin="10,20" Background="Gray"/>

                    <!-- Admin-only buttons -->
                    <StackPanel x:Name="AdminMenuPanel" Visibility="Collapsed">
                        <TextBlock Text="ADMIN" 
                                   Foreground="Orange" 
                                   FontWeight="Bold"
                                   Margin="16,0,0,10"/>

                        <Button Content="Manage Employees"
                                Click="ManageEmployees_Click"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                Height="50"
                                FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- RIGHT SIDE - Content Frame -->
            <!-- This is where different pages will be displayed -->
            <Frame x:Name="ContentFrame"
                   Grid.Column="1"
                   NavigationUIVisibility="Hidden"
                   Background="White"/>
        </Grid>
    </Grid>
</Window>