<Window x:Class="NZFTC_EmployeeSystem.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="NZFTC Employee Management System"
        Width="1200" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryDark" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="NZFTC Employee System"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="WelcomeText"
                               Text="Welcome, User"
                               FontSize="16"
                               Foreground="White"
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="LOGOUT"
                        Click="Logout_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"/>
            </Grid>
        </materialDesign:ColorZone>

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT NAVIGATION MENU -->
            <Border Grid.Column="0"
                    Background="{DynamicResource MaterialDesignDarkBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,0,1,0">
                <StackPanel Margin="0,20,0,0">

                    <Button Content="Dashboard"
                            Click="Dashboard_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <Button Content="My Profile"
                            Click="MyProfile_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <Button Content="Leave Management"
                            Click="LeaveManagement_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <Button Content="Payroll"
                            Click="Payroll_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <Button Content="Holidays"
                            Click="Holidays_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <Button Content="Grievances"
                            Click="Grievances_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="16"/>

                    <!-- ADMIN ONLY SECTION -->
                    <StackPanel x:Name="AdminMenuPanel"
                                Visibility="Collapsed"
                                Margin="0,20,0,0">

                        <TextBlock Text="ADMIN"
                                   Foreground="Gray"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Margin="16,0,0,10"/>

                        <!-- Departments management (admin only) -->
                        <Button Content="Departments"
                                Click="Departments_Click"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                Height="50"
                                FontSize="16"/>

                        <Button Content="Manage Employees"
                                Click="ManageEmployees_Click"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                Height="50"
                                FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- RIGHT CONTENT AREA -->
            <Frame x:Name="ContentFrame"
                   Grid.Column="1"
                   NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
