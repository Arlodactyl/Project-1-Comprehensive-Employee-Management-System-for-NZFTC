<Window x:Class="NZFTC_EmployeeSystem.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
        mc:Ignorable="d"
        Title="NZFTC Employee Management System" 
        Height="768" 
        Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Animation for expanding menu -->
        <Storyboard x:Key="ExpandMenu">
            <DoubleAnimation Storyboard.TargetName="SidebarBorder" 
                           Storyboard.TargetProperty="Width" 
                           To="270" 
                           Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <!-- Fade in text elements -->
            <DoubleAnimation Storyboard.TargetName="MenuPanel" 
                           Storyboard.TargetProperty="Opacity" 
                           To="1" 
                           Duration="0:0:0.3"
                           BeginTime="0:0:0.1"/>
        </Storyboard>

        <!-- Animation for collapsing menu -->
        <Storyboard x:Key="CollapseMenu">
            <DoubleAnimation Storyboard.TargetName="SidebarBorder" 
                           Storyboard.TargetProperty="Width" 
                           To="70" 
                           Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <!-- Fade out text elements quickly -->
            <DoubleAnimation Storyboard.TargetName="MenuPanel" 
                           Storyboard.TargetProperty="Opacity" 
                           To="0.0" 
                           Duration="0:0:0.15"/>
        </Storyboard>

        <!-- Teal Button Style for Sidebar with grey active state -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#40C4C8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2EB8BC"/>
                            </Trigger>
                            <!-- When active (current page), show grey background -->
                            <Trigger Property="Tag" Value="Active">
                                <Setter Property="Background" Value="#95A5A6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Collapsed Button Style with grey active state -->
        <Style x:Key="CollapsedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#40C4C8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Margin" Value="5,0,5,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2EB8BC"/>
                            </Trigger>
                            <!-- When active (current page), show grey background -->
                            <Trigger Property="Tag" Value="Active">
                                <Setter Property="Background" Value="#95A5A6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sign Out Button Style -->
        <Style x:Key="SignOutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5DADE2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Menu Toggle Button Style -->
        <Style x:Key="MenuToggleStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation Menu -->
        <Border x:Name="SidebarBorder"
                Grid.Column="0"
                Background="#F5F6F7"
                Width="270">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Menu Toggle Button at Top -->
                <Button Grid.Row="0"
                        Content="☰"
                        Style="{StaticResource MenuToggleStyle}"
                        Click="MenuToggle_Click"
                        HorizontalAlignment="Left"
                        Margin="10,15,0,15"/>

                <!-- Menu Items ScrollViewer -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto">
                    <!-- Panel with fade animation -->
                    <StackPanel x:Name="MenuPanel" 
                                Margin="10,10,10,10">

                        <!-- Dashboard Button - Always visible to all users -->
                        <Grid>
                            <Button x:Name="DashboardButtonExpanded"
                                    Content="Dashboard" 
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="Dashboard_Click"
                                    Tag="Active"
                                    Visibility="Visible"/>
                            <Button x:Name="DashboardButtonCollapsed"
                                    Content="DB" 
                                    Style="{StaticResource CollapsedButtonStyle}"
                                    Click="Dashboard_Click"
                                    Tag="Active"
                                    Visibility="Collapsed"
                                    ToolTip="Dashboard"/>
                        </Grid>

                        <!-- Account Button - Always visible to all users -->
                        <Grid>
                            <Button x:Name="AccountButtonExpanded"
                                    Content="Account" 
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="MyProfile_Click"
                                    Visibility="Visible"/>
                            <Button x:Name="AccountButtonCollapsed"
                                    Content="AC" 
                                    Style="{StaticResource CollapsedButtonStyle}"
                                    Click="MyProfile_Click"
                                    Visibility="Collapsed"
                                    ToolTip="Account"/>
                        </Grid>

                        <!-- Leave Management Button - Visible to all users -->
                        <Grid>
                            <Button x:Name="LeaveManagementButtonExpanded"
                                    Content="Leave Management" 
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="LeaveManagement_Click"
                                    Visibility="Visible"/>
                            <Button x:Name="LeaveManagementButtonCollapsed"
                                    Content="LM" 
                                    Style="{StaticResource CollapsedButtonStyle}"
                                    Click="LeaveManagement_Click"
                                    Visibility="Collapsed"
                                    ToolTip="Leave Management"/>
                        </Grid>

                        <!-- Holidays Button - Visible to all users -->
                        <Grid>
                            <Button x:Name="HolidaysButtonExpanded"
                                    Content="Holidays" 
                                    Style="{StaticResource SidebarButtonStyle}"
                                    Click="Holidays_Click"
                                    Visibility="Visible"/>
                            <Button x:Name="HolidaysButtonCollapsed"
                                    Content="HD" 
                                    Style="{StaticResource CollapsedButtonStyle}"
                                    Click="Holidays_Click"
                                    Visibility="Collapsed"
                                    ToolTip="Holidays"/>
                        </Grid>

                        <!-- Admin Section - Only visible to admin users -->
                        <StackPanel x:Name="AdminMenuPanel" 
                                    Visibility="Collapsed"
                                    Margin="0,15,0,0">

                            <!-- Employee Management Button - Admin only -->
                            <Grid>
                                <Button x:Name="EmployeeManagementButtonExpanded"
                                        Content="Employee Management" 
                                        Style="{StaticResource SidebarButtonStyle}"
                                        Click="ManageEmployees_Click"
                                        Visibility="Visible"/>
                                <Button x:Name="EmployeeManagementButtonCollapsed"
                                        Content="EM" 
                                        Style="{StaticResource CollapsedButtonStyle}"
                                        Click="ManageEmployees_Click"
                                        Visibility="Collapsed"
                                        ToolTip="Employee Management"/>
                            </Grid>

                            <!-- Departments Button - Admin only -->
                            <Grid>
                                <Button x:Name="DepartmentsButtonExpanded"
                                        Content="Departments" 
                                        Style="{StaticResource SidebarButtonStyle}"
                                        Click="Departments_Click"
                                        Visibility="Visible"/>
                                <Button x:Name="DepartmentsButtonCollapsed"
                                        Content="DP" 
                                        Style="{StaticResource CollapsedButtonStyle}"
                                        Click="Departments_Click"
                                        Visibility="Collapsed"
                                        ToolTip="Departments"/>
                            </Grid>

                            <!-- Payroll Button - Admin only -->
                            <Grid>
                                <Button x:Name="PayrollButtonExpanded"
                                        Content="Payroll" 
                                        Style="{StaticResource SidebarButtonStyle}"
                                        Click="Payroll_Click"
                                        Visibility="Visible"/>
                                <Button x:Name="PayrollButtonCollapsed"
                                        Content="PR" 
                                        Style="{StaticResource CollapsedButtonStyle}"
                                        Click="Payroll_Click"
                                        Visibility="Collapsed"
                                        ToolTip="Payroll"/>
                            </Grid>

                            <!-- Grievances Button - Admin only -->
                            <Grid>
                                <Button x:Name="GrievancesButtonExpanded"
                                        Content="Grievances" 
                                        Style="{StaticResource SidebarButtonStyle}"
                                        Click="Grievances_Click"
                                        Visibility="Visible"/>
                                <Button x:Name="GrievancesButtonCollapsed"
                                        Content="GR" 
                                        Style="{StaticResource CollapsedButtonStyle}"
                                        Click="Grievances_Click"
                                        Visibility="Collapsed"
                                        ToolTip="Grievances"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Logo at Bottom of Sidebar -->
                <StackPanel x:Name="LogoPanel" 
                            Grid.Row="2" 
                            Margin="20,0,20,30" 
                            HorizontalAlignment="Center">
                    <Image Source="/Images/logo.png" 
                           Height="150" 
                           Width="220"
                           Stretch="Uniform"
                           Opacity="0.8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Header Bar with User Info -->
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="#BDC3C7" 
                    BorderThickness="0,0,0,1"
                    Height="80">
                <Grid Margin="30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Page Title - Updates when navigating between pages -->
                    <TextBlock x:Name="PageTitleText"
                               Grid.Column="0"
                               Text="Dashboard" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#5D6D7E"
                               VerticalAlignment="Center"/>

                    <!-- User Info Section - Profile picture, welcome message, and sign out button -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">

                        <!-- Profile Picture Circle with Border -->
                        <Border Width="45" 
                                Height="45" 
                                CornerRadius="22.5"
                                BorderBrush="#BDC3C7"
                                BorderThickness="2"
                                Margin="0,0,15,0">
                            <Border.Clip>
                                <EllipseGeometry Center="22.5,22.5" RadiusX="22.5" RadiusY="22.5"/>
                            </Border.Clip>

                            <!-- Grid contains both default avatar and uploaded profile picture -->
                            <Grid>
                                <!-- Default Avatar - Red circle shows when no picture uploaded -->
                                <Ellipse x:Name="DefaultUserAvatar"
                                         Fill="#E74C3C"/>

                                <!-- Profile Picture - Shows when user has uploaded a photo -->
                                <Image x:Name="UserProfilePicture"
                                       Stretch="UniformToFill"
                                       Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- Welcome Text with User's Name -->
                        <TextBlock x:Name="WelcomeText"
                                   Text="Welcome" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0"/>

                        <!-- Sign Out Button -->
                        <Button Content="Sign Out" 
                                Style="{StaticResource SignOutButtonStyle}"
                                Click="Logout_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Frame - Pages load here when menu items clicked -->
            <Frame Grid.Row="1" 
                   x:Name="ContentFrame"
                   NavigationUIVisibility="Hidden"
                   Background="White"
                   Margin="20"/>
        </Grid>
    </Grid>
</Window>
