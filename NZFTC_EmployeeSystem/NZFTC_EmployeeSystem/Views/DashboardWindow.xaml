<Window x:Class="NZFTC_EmployeeSystem.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
        mc:Ignorable="d"
        Title="NZFTC Employee Management System" 
        Height="768" 
        Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Teal Button Style for Sidebar -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#40C4C8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2EB8BC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sign Out Button Style -->
        <Style x:Key="SignOutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5DADE2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style (X) -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar Navigation -->
        <Border Grid.Column="0" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Close Button (X) at top -->
                <Button Grid.Row="0"
                        Content="?" 
                        Style="{StaticResource CloseButtonStyle}"
                        HorizontalAlignment="Left"
                        Margin="15,15,0,20"
                        Click="Logout_Click"
                        ToolTip="Close"/>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1" Margin="15,0">
                    <!-- Main Section Header -->
                    <TextBlock Text="Main" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="10,0,0,10"/>

                    <Button Content="Dashboard" 
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="Dashboard_Click"/>

                    <Button Content="Account" 
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="MyProfile_Click"/>

                    <!-- Admin Section (Only visible to Admins) -->
                    <StackPanel x:Name="AdminMenuPanel" Visibility="Collapsed" Margin="0,20,0,0">
                        <Button Content="Employee Management" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="ManageEmployees_Click"/>

                        <Button Content="Departments" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="Departments_Click"/>

                        <Button Content="Payroll" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="Payroll_Click"/>

                        <Button Content="Grievances" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="Grievances_Click"/>
                    </StackPanel>

                    <!-- Employee Section (visible to all users) -->
                    <StackPanel Margin="0,20,0,0">
                        <Button Content="Leave Management" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="LeaveManagement_Click"/>

                        <Button Content="Holidays" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="Holidays_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Logo at Bottom -->
                <StackPanel Grid.Row="2" Margin="20,0,20,30" HorizontalAlignment="Center">
                    <Image Source="/Images/logo.png" 
                           Height="150" 
                           Width="220"
                           Stretch="Uniform"
                           Opacity="0.8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Header Bar -->
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="#BDC3C7" 
                    BorderThickness="0,0,0,1"
                    Height="80">
                <Grid Margin="30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Page Title -->
                    <TextBlock x:Name="PageTitleText"
                               Grid.Column="0"
                               Text="Dashboard" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#5D6D7E"
                               VerticalAlignment="Center"/>

                    <!-- User Info and Sign Out -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">

                        <!-- FIXED: Wrapped both Ellipse and Image in a Grid so Border only has ONE child -->
                        <!-- Profile Picture Circle -->
                        <Border Width="45" 
                                Height="45" 
                                CornerRadius="22.5"
                                BorderBrush="#BDC3C7"
                                BorderThickness="2"
                                Margin="0,0,15,0">
                            <Border.Clip>
                                <EllipseGeometry Center="22.5,22.5" RadiusX="22.5" RadiusY="22.5"/>
                            </Border.Clip>

                            <!-- Grid wraps both the default avatar and profile picture -->
                            <Grid>
                                <!-- Default Red Circle (shows if no picture) -->
                                <Ellipse x:Name="DefaultUserAvatar"
                                         Fill="#E74C3C"/>

                                <!-- Profile Picture (shows if picture uploaded) -->
                                <Image x:Name="UserProfilePicture"
                                       Stretch="UniformToFill"
                                       Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- Welcome Text -->
                        <TextBlock x:Name="WelcomeText"
                                   Text="Welcome" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0"/>

                        <!-- Sign Out Button -->
                        <Button Content="Sign Out" 
                                Style="{StaticResource SignOutButtonStyle}"
                                Click="Logout_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Frame for Pages -->
            <Frame Grid.Row="1" 
                   x:Name="ContentFrame"
                   NavigationUIVisibility="Hidden"
                   Background="White"
                   Margin="20"/>
        </Grid>
    </Grid>
</Window>
