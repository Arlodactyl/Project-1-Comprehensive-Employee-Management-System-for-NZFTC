<Page x:Class="NZFTC_EmployeeSystem.Views.GrievancesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Grievances">

    <Page.Resources>
        <!-- Standard Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Delete/Close Button Style -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Info Button -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <TextBlock Text="Grievance Management" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <!-- Info Button in Header -->
                <Button Content="i"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="35"
                        Height="35"
                        Click="InfoButton_Click"
                        ToolTip="What is a grievance?">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Tab Control for different views -->
        <TabControl Grid.Row="1" 
                    x:Name="GrievanceTabControl"
                    Margin="20">

            <!-- Tab 1: New Grievance Form - ALWAYS VISIBLE -->
            <TabItem Header="Submit New Grievance" 
                     x:Name="NewGrievanceTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Form Header -->
                        <TextBlock Grid.Row="0"
                                   Text="Submit a New Grievance" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <!-- Instructions -->
                        <TextBlock Grid.Row="0"
                                   Text="Use this form to formally raise workplace concerns. All grievances are confidential and will be reviewed by HR."
                                   FontSize="13"
                                   Foreground="#7F8C8D"
                                   TextWrapping="Wrap"
                                   Margin="0,35,0,20"/>

                        <!-- Form Content -->
                        <StackPanel Grid.Row="1" MaxWidth="700" HorizontalAlignment="Left">

                            <!-- Grievance Type -->
                            <TextBlock Text="Grievance Type *" 
                                       FontSize="13" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="GrievanceTypeComboBox"
                                      Height="35"
                                      FontSize="13"
                                      Margin="0,0,0,15">
                                <ComboBoxItem Content="-- Select Type --" IsSelected="True"/>
                                <ComboBoxItem Content="Workplace Harassment"/>
                                <ComboBoxItem Content="Bullying"/>
                                <ComboBoxItem Content="Discrimination"/>
                                <ComboBoxItem Content="Health and Safety"/>
                                <ComboBoxItem Content="Unfair Treatment"/>
                                <ComboBoxItem Content="Pay or Entitlements"/>
                                <ComboBoxItem Content="Working Conditions"/>
                                <ComboBoxItem Content="Management Conduct"/>
                                <ComboBoxItem Content="Breach of Employment Agreement"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>

                            <!-- Title -->
                            <TextBlock Text="Title *" 
                                       FontSize="13" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="GrievanceTitleTextBox" 
                                     Height="35"
                                     Padding="8"
                                     FontSize="13"
                                     Margin="0,0,0,15"
                                     MaxLength="200"/>

                            <!-- Incident Date(s) -->
                            <TextBlock Text="Incident Date(s) *" 
                                       FontSize="13" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Select the date(s) when the incident occurred. Hold Ctrl to select multiple dates."
                                       FontSize="11"
                                       Foreground="#95A5A6"
                                       Margin="0,0,0,5"/>
                            <Calendar x:Name="IncidentDateCalendar"
                                      SelectionMode="MultipleRange"
                                      DisplayMode="Month"
                                      Margin="0,0,0,15"
                                      HorizontalAlignment="Left"
                                      BorderBrush="#BDC3C7"
                                      BorderThickness="1"/>

                            <!-- Description -->
                            <TextBlock Text="Description *" 
                                       FontSize="13" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Please provide specific details including dates, times, and people involved."
                                       FontSize="11"
                                       Foreground="#95A5A6"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="GrievanceDescriptionTextBox" 
                                     Height="180"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Padding="8"
                                     FontSize="13"
                                     Margin="0,0,0,20"
                                     MaxLength="2000"/>

                            <!-- Validation Message -->
                            <TextBlock x:Name="ValidationMessageTextBlock"
                                       Text=""
                                       FontSize="12"
                                       Foreground="#E74C3C"
                                       Margin="0,0,0,10"
                                       TextWrapping="Wrap"
                                       Visibility="Collapsed"/>

                            <!-- Submit Button -->
                            <Button Content="Submit Grievance" 
                                    Style="{StaticResource ActionButton}"
                                    Click="SubmitGrievance_Click"
                                    HorizontalAlignment="Left"
                                    Width="180"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Tab 2: My Grievances (Status View) - ALWAYS VISIBLE -->
            <TabItem Header="My Grievances" 
                     x:Name="MyGrievancesTab">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" 
                               Text="Your Submitted Grievances" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <!-- Instructions -->
                    <TextBlock Grid.Row="1"
                               Text="Track the status of your grievances. You will be notified when there are updates."
                               FontSize="13"
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"/>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="2"
                              x:Name="MyGrievancesGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              AlternatingRowBackground="#ECF0F1"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding GrievanceType}" Width="150"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Incident Date(s)" Binding="{Binding IncidentDates}" Width="150"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Submitted" Binding="{Binding RequestDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                            <DataGridTextColumn Header="Response" Binding="{Binding AdminResponse}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Export Button -->
                    <Button Grid.Row="3"
                            Content="Export My Grievances"
                            Style="{StaticResource ActionButton}"
                            Click="ExportMyGrievances_Click"
                            HorizontalAlignment="Left"
                            Margin="0,15,0,0"
                            Width="200"/>
                </Grid>
            </TabItem>

            <!-- Tab 3: Admin View - ADMIN ONLY -->
            <TabItem Header="Manage Grievances (Admin)" 
                     x:Name="AdminGrievancesTab">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="All Employee Grievances" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <!-- Instructions -->
                    <TextBlock Grid.Row="1"
                               Text="Review and respond to employee grievances. Select a grievance to add a response or close it."
                               FontSize="13"
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"/>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="2"
                              x:Name="AllGrievancesGrid"
                              AutoGenerateColumns="False"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              AlternatingRowBackground="#ECF0F1"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Employee" Binding="{Binding Employee.FullName}" Width="150"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding GrievanceType}" Width="140"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Incident Date(s)" Binding="{Binding IncidentDates}" Width="150"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Submitted" Binding="{Binding RequestDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Response" Binding="{Binding AdminResponse}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Admin Response Section -->
                    <Border Grid.Row="3"
                            Background="#F8F9FA" 
                            Padding="20"
                            CornerRadius="5"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Admin Response" 
                                       FontSize="13" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="AdminResponseTextBox"
                                     Height="100"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Padding="8"
                                     FontSize="13"
                                     Margin="0,0,0,15"
                                     MaxLength="1000"/>

                            <StackPanel Orientation="Horizontal">
                                <Button Content="Respond to Selected" 
                                        Style="{StaticResource SuccessButton}"
                                        Click="Respond_Click"
                                        Width="180"/>
                                <Button Content="Close Grievance" 
                                        Style="{StaticResource DeleteButton}"
                                        Click="CloseGrievance_Click"
                                        Width="180"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Export Button -->
                    <Button Grid.Row="4"
                            Content="Export All Grievances"
                            Style="{StaticResource ActionButton}"
                            Click="ExportAllGrievances_Click"
                            HorizontalAlignment="Left"
                            Width="200"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
