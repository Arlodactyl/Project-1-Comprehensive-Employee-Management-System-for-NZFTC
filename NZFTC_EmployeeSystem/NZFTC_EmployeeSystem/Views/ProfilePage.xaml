<Page x:Class="NZFTC_EmployeeSystem.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="My Profile">

    <Page.Resources>
        <!-- TextBox Style for displaying read-only employee information -->
        <Style x:Key="ProfileTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Avatar Selection Button Style -->
        <Style x:Key="AvatarButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Info Button -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <TextBlock Text="My Profile" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <!-- Info Button in Header -->
                <Button Content="i"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="35"
                        Height="35"
                        Click="HelpButton_Click"
                        ToolTip="Profile Help">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="40,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Profile Picture Section -->
                <Border Grid.Row="0"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="25"
                        Margin="0,0,0,25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Profile Picture Display -->
                        <StackPanel Grid.Column="0" Margin="0,0,30,0">
                            <TextBlock Text="Profile Picture" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,15"/>

                            <!-- Current Profile Picture -->
                            <Border Width="150" 
                                    Height="150" 
                                    CornerRadius="75"
                                    BorderBrush="#3498DB"
                                    BorderThickness="3"
                                    HorizontalAlignment="Left">
                                <Border.Clip>
                                    <EllipseGeometry Center="75,75" RadiusX="75" RadiusY="75"/>
                                </Border.Clip>
                                <Grid>
                                    <Ellipse x:Name="DefaultAvatar"
                                             Fill="#E74C3C"/>
                                    <Image x:Name="ProfilePictureImage"
                                           Stretch="UniformToFill"
                                           Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Right: Avatar Selection -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Choose Avatar or Upload Custom Picture" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="#34495E"
                                       Margin="0,0,0,15"/>

                            <!-- Avatar Selection - Horizontal -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Button Style="{StaticResource AvatarButton}"
                                        Width="80" Height="80"
                                        Margin="0,0,10,0"
                                        Click="SelectAvatar_Click"
                                        Tag="hamster.png"
                                        ToolTip="Hamster Avatar">
                                    <Image Source="/Images/hamster.png" 
                                           Stretch="Uniform"
                                           Width="70" Height="70"/>
                                </Button>

                                <Button Style="{StaticResource AvatarButton}"
                                        Width="80" Height="80"
                                        Margin="0,0,10,0"
                                        Click="SelectAvatar_Click"
                                        Tag="panda.png"
                                        ToolTip="Panda Avatar">
                                    <Image Source="/Images/panda.png" 
                                           Stretch="Uniform"
                                           Width="70" Height="70"/>
                                </Button>

                                <Button Style="{StaticResource AvatarButton}"
                                        Width="80" Height="80"
                                        Margin="0,0,10,0"
                                        Click="SelectAvatar_Click"
                                        Tag="bee.png"
                                        ToolTip="Bee Avatar">
                                    <Image Source="/Images/bee.png" 
                                           Stretch="Uniform"
                                           Width="70" Height="70"/>
                                </Button>

                                <Button Style="{StaticResource AvatarButton}"
                                        Width="80" Height="80"
                                        Margin="0,0,10,0"
                                        Click="SelectAvatar_Click"
                                        Tag="frog.png"
                                        ToolTip="Frog Avatar">
                                    <Image Source="/Images/frog.png" 
                                           Stretch="Uniform"
                                           Width="70" Height="70"/>
                                </Button>

                                <Button Content="Upload Custom"
                                        Style="{StaticResource SuccessButton}"
                                        Click="UploadPicture_Click"
                                        Width="140"
                                        Height="80"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Personal Information Section -->
                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="25"
                        Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock Text="Personal Information" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Full Name (spans both columns) -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                                <TextBlock Text="Full Name" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#34495E"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="FullNameText" 
                                         Style="{StaticResource ProfileTextBox}"
                                         IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="Email" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#34495E"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="EmailText" 
                                         Style="{StaticResource ProfileTextBox}"
                                         IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Phone Number -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="Phone Number" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#34495E"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="PhoneText" 
                                         Style="{StaticResource ProfileTextBox}"
                                         IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Job Title -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="Job Title" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#34495E"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="JobTitleText" 
                                         Style="{StaticResource ProfileTextBox}"
                                         IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Department -->
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="Department" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#34495E"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="DepartmentText" 
                                         Style="{StaticResource ProfileTextBox}"
                                         IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Hire Date -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="Hire Date" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#34495E"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="HireDateText" 
                                         Style="{StaticResource ProfileTextBox}"
                                         IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Salary -->
                            <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="Salary" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#34495E"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="SalaryText" 
                                         Style="{StaticResource ProfileTextBox}"
                                         IsReadOnly="True"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Leave Balance Section -->
                <Border Grid.Row="2"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="25">
                    <StackPanel>
                        <TextBlock Text="Leave Balances" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Annual Leave Balance -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Annual Leave Balance" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#34495E"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="AnnualLeaveText" 
                                         Style="{StaticResource ProfileTextBox}"
                                         IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Sick Leave Balance -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Sick Leave Balance" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#34495E"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="SickLeaveText" 
                                         Style="{StaticResource ProfileTextBox}"
                                         IsReadOnly="True"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
