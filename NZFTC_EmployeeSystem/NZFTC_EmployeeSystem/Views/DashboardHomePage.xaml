<Page x:Class="NZFTC_EmployeeSystem.Views.DashboardHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardHomePage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="Dashboard Overview" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Employees Card -->
            <Border Grid.Row="0" Grid.Column="0" 
                    Background="#3498DB" 
                    Margin="10" 
                    Padding="20" 
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Total Employees" 
                               FontSize="16" 
                               Foreground="White" 
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalEmployeesText" 
                               Text="0" 
                               FontSize="36" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Pending Leave Requests Card -->
            <Border Grid.Row="0" Grid.Column="1" 
                    Background="#E74C3C" 
                    Margin="10" 
                    Padding="20" 
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Pending Leave Requests" 
                               FontSize="16" 
                               Foreground="White" 
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="PendingLeaveText" 
                               Text="0" 
                               FontSize="36" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Open Grievances Card -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="#F39C12" 
                    Margin="10" 
                    Padding="20" 
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Open Grievances" 
                               FontSize="16" 
                               Foreground="White" 
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="OpenGrievanceText" 
                               Text="0" 
                               FontSize="36" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Upcoming Holidays Card -->
            <Border Grid.Row="1" Grid.Column="1" 
                    Background="#27AE60" 
                    Margin="10" 
                    Padding="20" 
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Upcoming Holidays" 
                               FontSize="16" 
                               Foreground="White" 
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="UpcomingHolidayText" 
                               Text="0" 
                               FontSize="36" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>