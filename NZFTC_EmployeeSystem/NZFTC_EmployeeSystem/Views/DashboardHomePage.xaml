<Page x:Class="NZFTC_EmployeeSystem.Views.DashboardHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="Dashboard">

    <Page.Resources>
        <!-- Stat Card Style with Hover Effects -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="25,20"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8"
                                      ShadowDepth="3"
                                      Opacity="0.3"
                                      Color="#000000"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="1.03"
                                                 Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="1.03"
                                                 Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius"
                                                 To="15"
                                                 Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.ShadowDepth"
                                                 To="6"
                                                 Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="1"
                                                 Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="1"
                                                 Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius"
                                                 To="8"
                                                 Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.ShadowDepth"
                                                 To="3"
                                                 Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Stat Number Style -->
        <Style x:Key="StatNumber" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>

        <!-- Stat Label Style -->
        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.95"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- News Item Style -->
        <Style x:Key="NewsItem" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="0,15,0,15"/>
        </Style>

        <!-- Help Button Style -->
        <Style x:Key="HelpButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="17.5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Info Button -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <TextBlock Text="Dashboard Overview" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <!-- Info Button in Header -->
                <Button Content="i"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="35"
                        Height="35"
                        Click="HelpButton_Click"
                        ToolTip="Dashboard Help">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="17.5"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.Effect>
                                                <DropShadowEffect x:Name="shadow"
                                                                  BlurRadius="6"
                                                                  ShadowDepth="2"
                                                                  Opacity="0.4"
                                                                  Color="#000000"/>
                                            </Border.Effect>
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="border"
                                                                            Storyboard.TargetProperty="Background.Color"
                                                                            To="#2980B9"
                                                                            Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                                             Storyboard.TargetProperty="ScaleX"
                                                                             To="1.1"
                                                                             Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                                             Storyboard.TargetProperty="ScaleY"
                                                                             To="1.1"
                                                                             Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="shadow"
                                                                             Storyboard.TargetProperty="BlurRadius"
                                                                             To="10"
                                                                             Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="border"
                                                                            Storyboard.TargetProperty="Background.Color"
                                                                            To="#3498DB"
                                                                            Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                                             Storyboard.TargetProperty="ScaleX"
                                                                             To="1"
                                                                             Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                                             Storyboard.TargetProperty="ScaleY"
                                                                             To="1"
                                                                             Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="shadow"
                                                                             Storyboard.TargetProperty="BlurRadius"
                                                                             To="6"
                                                                             Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#F5F6F7">
            <StackPanel Margin="30">

                <!-- Stats Cards Row - All Same Background Color -->
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Employees Card - Blue -->
                    <Border Grid.Column="0" 
                            Background="#5DADE2" 
                            Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="Total Employees" 
                                       Style="{StaticResource StatLabel}"/>
                            <TextBlock x:Name="TotalEmployeesText"
                                       Text="12" 
                                       Style="{StaticResource StatNumber}"/>
                        </StackPanel>
                    </Border>

                    <!-- Pending Leave Requests Card - Same Red as Open Grievances -->
                    <Border Grid.Column="1" 
                            Background="#EC7063" 
                            Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="Pending Leave Requests" 
                                       Style="{StaticResource StatLabel}"/>
                            <TextBlock x:Name="PendingLeaveText"
                                       Text="0" 
                                       Style="{StaticResource StatNumber}"/>
                        </StackPanel>
                    </Border>

                    <!-- Open Grievances Card - Same Red as Pending Leave -->
                    <Border Grid.Column="2" 
                            Background="#EC7063" 
                            Style="{StaticResource StatCard}"
                            Margin="0">
                        <StackPanel>
                            <TextBlock Text="Open Grievances" 
                                       Style="{StaticResource StatLabel}"/>
                            <TextBlock x:Name="OpenGrievanceText"
                                       Text="0" 
                                       Style="{StaticResource StatNumber}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Building Image Section with Overlay Text -->
                <Border Height="360" 
                        CornerRadius="8" 
                        Margin="0,0,0,25"
                        ClipToBounds="True"
                        Background="#E0E0E0">
                    <Grid>
                        <!-- Background Image - Try to load, show grey if fails -->
                        <Image x:Name="BuildingImage"
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                        <!-- Fallback text if image doesn't load -->
                        <TextBlock x:Name="ImagePlaceholder"
                                   Text="NZFTC Building"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>

                        <!-- Dark Overlay for Better Text Visibility -->
                        <Border Background="#000000" 
                                Opacity="0.4" RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="0.211"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Border.RenderTransform>
                        </Border>

                        <!-- Centered Text Overlay -->
                        <StackPanel VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Welcome to the NZFTC Employee Portal" 
                                       FontSize="48" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       TextAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Your gateway to employee services and information" 
                                       FontSize="18" 
                                       Foreground="White"
                                       TextAlignment="Center"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Bottom Section - News and Quick Links -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Company News Section - Left Side -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="8"
                            Padding="25"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Company News" 
                                       Style="{StaticResource SectionHeader}"/>

                            <!-- News Item 1 -->
                            <Border Style="{StaticResource NewsItem}">
                                <StackPanel>
                                    <TextBlock Text="New Safety Training Program Launched" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="All employees required to complete updated workplace safety training by end of quarter" 
                                               FontSize="14"
                                               Foreground="#7F8C8D"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- News Item 2 -->
                            <Border Style="{StaticResource NewsItem}">
                                <StackPanel>
                                    <TextBlock Text="Office Expansion Completed" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="New wing of Auckland office now open with modern collaboration spaces" 
                                               FontSize="14"
                                               Foreground="#7F8C8D"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- News Item 3 -->
                            <Border Style="{StaticResource NewsItem}"
                                    BorderThickness="0">
                                <StackPanel>
                                    <TextBlock Text="Christmas Party Details Released" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Annual celebration to be held December 15th at Christchurch Convention Centre" 
                                               FontSize="14"
                                               Foreground="#7F8C8D"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Quick Links Section - Right Side -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            CornerRadius="8"
                            Padding="25"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Quick Links" 
                                       Style="{StaticResource SectionHeader}"/>

                            <!-- Weather Widget -->
                            <Border Background="#F8F9FA" 
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock x:Name="WeatherLocationText"
                                               Text="Christchurch" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"
                                               Margin="0,0,0,10"/>

                                    <!-- Weather Icon and Temperature Side by Side -->
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Animated Weather Icon -->
                                        <Viewbox Grid.Column="0" 
                                                 Width="80" 
                                                 Height="80"
                                                 Margin="0,0,15,0"
                                                 VerticalAlignment="Center">
                                            <Canvas x:Name="WeatherIconCanvas" 
                                                    Width="100" 
                                                    Height="100">
                                                <!-- Weather icons will be dynamically added here -->
                                            </Canvas>
                                        </Viewbox>

                                        <!-- Temperature Display -->
                                        <StackPanel Grid.Column="1" 
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <TextBlock x:Name="WeatherTemperatureText"
                                                       Text="--" 
                                                       FontSize="48" 
                                                       FontWeight="Bold"
                                                       Foreground="#F39C12"
                                                       VerticalAlignment="Top"/>
                                            <TextBlock Text="oC"
                                                       FontSize="24" 
                                                       FontWeight="Bold"
                                                       Foreground="#F39C12"
                                                       VerticalAlignment="Top"
                                                       Margin="2,8,0,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock x:Name="WeatherDescriptionText"
                                               Text="Loading weather..."
                                               FontSize="13"
                                               Foreground="#7F8C8D"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Quick Action Buttons - Role-based labels set in code-behind -->
                            <StackPanel>
                                <!-- First Quick Link Button -->
                                <Button x:Name="LeaveManagementButton"
                                        Content="Leave Management" 
                                        Background="#3498DB"
                                        Foreground="White"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Height="45"
                                        BorderThickness="0"
                                        Margin="0,0,0,10"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    RenderTransformOrigin="0.5,0.5">
                                                <Border.Effect>
                                                    <DropShadowEffect x:Name="shadow"
                                                                      BlurRadius="8"
                                                                      ShadowDepth="2"
                                                                      Opacity="0.3"
                                                                      Color="#000000"/>
                                                </Border.Effect>
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                                                </Border.RenderTransform>
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="border"
                                                                                Storyboard.TargetProperty="Background.Color"
                                                                                To="#2980B9"
                                                                                Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="scale"
                                                                                 Storyboard.TargetProperty="ScaleX"
                                                                                 To="1.03"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="scale"
                                                                                 Storyboard.TargetProperty="ScaleY"
                                                                                 To="1.03"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="shadow"
                                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                                 To="12"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="shadow"
                                                                                 Storyboard.TargetProperty="ShadowDepth"
                                                                                 To="4"
                                                                                 Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="border"
                                                                                Storyboard.TargetProperty="Background.Color"
                                                                                To="#3498DB"
                                                                                Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="scale"
                                                                                 Storyboard.TargetProperty="ScaleX"
                                                                                 To="1"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="scale"
                                                                                 Storyboard.TargetProperty="ScaleY"
                                                                                 To="1"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="shadow"
                                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                                 To="8"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="shadow"
                                                                                 Storyboard.TargetProperty="ShadowDepth"
                                                                                 To="2"
                                                                                 Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Second Quick Link Button -->
                                <Button x:Name="PayrollButton"
                                        Content="Payroll" 
                                        Background="#27AE60"
                                        Foreground="White"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Height="45"
                                        BorderThickness="0"
                                        Margin="0,0,0,10"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    RenderTransformOrigin="0.5,0.5">
                                                <Border.Effect>
                                                    <DropShadowEffect x:Name="shadow"
                                                                      BlurRadius="8"
                                                                      ShadowDepth="2"
                                                                      Opacity="0.3"
                                                                      Color="#000000"/>
                                                </Border.Effect>
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                                                </Border.RenderTransform>
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="border"
                                                                                Storyboard.TargetProperty="Background.Color"
                                                                                To="#229954"
                                                                                Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="scale"
                                                                                 Storyboard.TargetProperty="ScaleX"
                                                                                 To="1.03"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="scale"
                                                                                 Storyboard.TargetProperty="ScaleY"
                                                                                 To="1.03"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="shadow"
                                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                                 To="12"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="shadow"
                                                                                 Storyboard.TargetProperty="ShadowDepth"
                                                                                 To="4"
                                                                                 Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="border"
                                                                                Storyboard.TargetProperty="Background.Color"
                                                                                To="#27AE60"
                                                                                Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="scale"
                                                                                 Storyboard.TargetProperty="ScaleX"
                                                                                 To="1"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="scale"
                                                                                 Storyboard.TargetProperty="ScaleY"
                                                                                 To="1"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="shadow"
                                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                                 To="8"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="shadow"
                                                                                 Storyboard.TargetProperty="ShadowDepth"
                                                                                 To="2"
                                                                                 Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Third Quick Link Button -->
                                <Button x:Name="DepartmentsButton"
                                        Content="Departments" 
                                        Background="#F39C12"
                                        Foreground="White"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Height="45"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    RenderTransformOrigin="0.5,0.5">
                                                <Border.Effect>
                                                    <DropShadowEffect x:Name="shadow"
                                                                      BlurRadius="8"
                                                                      ShadowDepth="2"
                                                                      Opacity="0.3"
                                                                      Color="#000000"/>
                                                </Border.Effect>
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                                                </Border.RenderTransform>
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="border"
                                                                                Storyboard.TargetProperty="Background.Color"
                                                                                To="#D68910"
                                                                                Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="scale"
                                                                                 Storyboard.TargetProperty="ScaleX"
                                                                                 To="1.03"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="scale"
                                                                                 Storyboard.TargetProperty="ScaleY"
                                                                                 To="1.03"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="shadow"
                                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                                 To="12"
                                                                                 Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="shadow"
                                                                                 Storyboard.TargetProperty="ShadowDepth"
                                                                                 To="4"
                                                                                 Duration="0:0:0.2"/>
