<Page x:Class="NZFTC_EmployeeSystem.Views.EmployeeManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Employee Management">
    <!--
      EmployeeManagementPage
      Provides administrators with the ability to view all employees,
      toggle their active status, and create new employee records
      alongside corresponding user accounts. A ScrollViewer ensures
      that the add form remains accessible on smaller screens.
    -->
    <ScrollViewer>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Employee Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <!-- Employees table -->
            <DataGrid x:Name="EmployeesGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Job Title" Binding="{Binding JobTitle}" Width="*"/>
                    <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
            <!-- Action buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button Content="Toggle Active"
                        Click="ToggleActive_Click"
                        Margin="0,0,10,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
            <!-- Add employee form -->
            <Border Grid.Row="3"
                    Padding="10"
                    Background="{DynamicResource MaterialDesignCard}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Add New Employee" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="First Name:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="FirstNameTextBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Last Name:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="LastNameTextBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Email:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="EmailTextBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Phone:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="PhoneTextBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Job Title:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="JobTitleTextBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Department:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="DepartmentTextBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Hire Date:" Width="120" VerticalAlignment="Center"/>
                        <DatePicker x:Name="HireDatePicker" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Salary:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="SalaryTextBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Tax Rate (%):" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="TaxRateTextBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Username:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="UsernameTextBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Password:" Width="120" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="PasswordBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Role:" Width="120" VerticalAlignment="Center"/>
                        <ComboBox x:Name="RoleComboBox" Width="200">
                            <ComboBoxItem Content="Employee"/>
                            <ComboBoxItem Content="Admin"/>
                        </ComboBox>
                    </StackPanel>
                    <Button Content="Create Employee"
                            Width="180"
                            Click="CreateEmployee_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
