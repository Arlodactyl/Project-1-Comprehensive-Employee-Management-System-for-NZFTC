<Page x:Class="NZFTC_EmployeeSystem.Views.EmployeeManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Employee Management">

    <Page.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#F39C12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D68910"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <TextBlock Text="Employee Management" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Employees List Section -->
                <TextBlock Text="Current Employees" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"
                           Margin="0,0,0,5"/>

                <TextBlock Text="View all employees and their department assignments. Select an employee and click 'Toggle Active Status' to activate or deactivate them." 
                           FontSize="12" 
                           Foreground="#7F8C8D"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                <DataGrid x:Name="EmployeesGrid"
                          Height="250"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          AlternatingRowBackground="#ECF0F1"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>
                        <DataGridTextColumn Header="Job Title" Binding="{Binding JobTitle}" Width="150"/>
                        <DataGridTextColumn Header="Department" Binding="{Binding Department.Name}" Width="120"/>
                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Content="Toggle Active Status" 
                        Style="{StaticResource ToggleButton}"
                        Click="ToggleActive_Click"
                        HorizontalAlignment="Left"/>

                <!-- Create New Employee Section -->
                <Border BorderBrush="#BDC3C7" 
                        BorderThickness="1" 
                        Padding="20" 
                        Margin="0,30,0,0"
                        Background="#F8F9FA"
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Create New Employee" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="Fill in the form below to create a new employee. Fields marked with * are required." 
                                   FontSize="12" 
                                   Foreground="#7F8C8D"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- First Name -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                                <TextBlock Text="First Name *" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="FirstNameTextBox" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Last Name -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Last Name *" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="LastNameTextBox" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
                                <TextBlock Text="Email *" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="EmailTextBox" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Phone -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Phone Number" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="PhoneTextBox" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Job Title -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,10">
                                <TextBlock Text="Job Title" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="JobTitleTextBox" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Department - CHANGED FROM TEXTBOX TO COMBOBOX -->
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Department *" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="DepartmentComboBox" Style="{StaticResource ModernComboBox}"/>
                            </StackPanel>

                            <!-- Hire Date -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,10">
                                <TextBlock Text="Hire Date" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <DatePicker x:Name="HireDatePicker" Style="{StaticResource ModernDatePicker}"/>
                            </StackPanel>

                            <!-- Salary -->
                            <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Salary *" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="SalaryTextBox" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Tax Rate -->
                            <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,0,10">
                                <TextBlock Text="Tax Rate (%) *" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="TaxRateTextBox" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Username -->
                            <StackPanel Grid.Row="4" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Username *" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="UsernameTextBox" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Password -->
                            <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,0,0,10">
                                <TextBlock Text="Password *" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <PasswordBox x:Name="PasswordBox" Height="32" FontSize="13" Padding="8,5"/>
                            </StackPanel>

                            <!-- Role -->
                            <StackPanel Grid.Row="5" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Role *" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="RoleComboBox" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Employee"/>
                                    <ComboBoxItem Content="Admin"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <Button Content="Create Employee" 
                                Style="{StaticResource ActionButton}"
                                Background="#27AE60"
                                Click="CreateEmployee_Click"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="15,8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#229954"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
