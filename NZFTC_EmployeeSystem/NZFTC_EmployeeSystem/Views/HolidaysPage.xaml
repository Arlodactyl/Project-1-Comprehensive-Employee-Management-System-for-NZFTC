<Page x:Class="NZFTC_EmployeeSystem.Views.HolidaysPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Holidays">

    <Page.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <TextBlock Text="Company Holidays" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="20">

            <!-- Tab 1: View Holidays -->
            <TabItem Header="View Holidays">
                <DataGrid x:Name="HolidaysGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          AlternatingRowBackground="#ECF0F1"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Margin="20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Holiday Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="120"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                        <DataGridCheckBoxColumn Header="Recurring" Binding="{Binding IsRecurring}" Width="100"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Tab 2: Add Holiday (Admin Only) -->
            <TabItem Header="Add Holiday" x:Name="AdminHolidayTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">

                        <!-- Holiday Name -->
                        <TextBlock Text="Holiday Name:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="HolidayNameTextBox"
                                 Height="35"
                                 FontSize="13"
                                 Padding="8"
                                 Margin="0,0,0,15"/>

                        <!-- Date -->
                        <TextBlock Text="Date:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <DatePicker x:Name="HolidayDatePicker" 
                                    Height="35"
                                    FontSize="13"
                                    Margin="0,0,0,15"/>

                        <!-- Type -->
                        <TextBlock Text="Type:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="HolidayTypeComboBox" 
                                  Height="35"
                                  FontSize="13"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Public"/>
                            <ComboBoxItem Content="Company"/>
                        </ComboBox>

                        <!-- Recurring Checkbox -->
                        <CheckBox x:Name="RecurringCheckBox" 
                                  Content="This holiday recurs annually"
                                  FontSize="13"
                                  Margin="0,0,0,15"/>

                        <!-- Description -->
                        <TextBlock Text="Description:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="HolidayDescriptionTextBox" 
                                 Height="80" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"
                                 FontSize="13"
                                 Margin="0,0,0,20"/>

                        <!-- Add Button -->
                        <Button Content="Add Holiday"
                                Click="AddHoliday_Click"
                                Style="{StaticResource ActionButton}"
                                Width="150"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
