<Page x:Class="NZFTC_EmployeeSystem.Views.HolidaysPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1000"
      Title="Holidays">

    <Page.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <TextBlock Text="Company Holidays" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="20">

            <!-- Tab 1: View Holidays -->
            <TabItem Header="View Holidays">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Row for the holidays grid -->
                        <RowDefinition Height="2*"/>
                        <!-- Row for the visual timeline map -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Holidays Grid with Countdown Column -->
                    <DataGrid x:Name="HolidaysGrid"
                              Grid.Row="0"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              AlternatingRowBackground="#ECF0F1"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Margin="20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Holiday Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="120"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                            <!-- New Countdown Column - shows days until the holiday -->
                            <DataGridTextColumn Header="Countdown" Binding="{Binding DaysUntil}" Width="120"/>
                            <DataGridCheckBoxColumn Header="Recurring" Binding="{Binding IsRecurring}" Width="100"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Visual Timeline Map Section -->
                    <Border Grid.Row="1" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            Margin="20,0,20,20"
                            Background="#F8F9FA"
                            CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Timeline Header -->
                            <Border Grid.Row="0" 
                                    Background="#34495E" 
                                    CornerRadius="8,8,0,0"
                                    Padding="15,10">
                                <TextBlock Text="Upcoming Holidays Timeline" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                            </Border>

                            <!-- Timeline Content Area -->
                            <ScrollViewer Grid.Row="1" 
                                          HorizontalScrollBarVisibility="Auto" 
                                          VerticalScrollBarVisibility="Auto"
                                          Padding="20">
                                <ItemsControl x:Name="TimelineItemsControl">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <!-- Wrap panel allows items to flow horizontally -->
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- Each holiday card in the timeline -->
                                            <Border Width="180" 
                                                    Height="140" 
                                                    Background="White"
                                                    BorderBrush="#3498DB"
                                                    BorderThickness="2"
                                                    CornerRadius="8"
                                                    Margin="10"
                                                    Padding="12">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Holiday Name -->
                                                    <TextBlock Grid.Row="0" 
                                                               Text="{Binding Name}" 
                                                               FontSize="14"
                                                               FontWeight="Bold"
                                                               Foreground="#2C3E50"
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               Margin="0,0,0,8"/>

                                                    <!-- Holiday Date -->
                                                    <TextBlock Grid.Row="1" 
                                                               Text="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                                               FontSize="12"
                                                               Foreground="#7F8C8D"
                                                               TextAlignment="Center"
                                                               Margin="0,0,0,8"/>

                                                    <!-- Countdown Display -->
                                                    <Border Grid.Row="2" 
                                                            Background="#E8F5E9"
                                                            BorderBrush="#4CAF50"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            Padding="8,4"
                                                            Margin="0,0,0,8">
                                                        <TextBlock Text="{Binding DaysUntil}" 
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#2E7D32"
                                                                   TextAlignment="Center"/>
                                                    </Border>

                                                    <!-- Holiday Type Badge -->
                                                    <Border Grid.Row="3" 
                                                            Background="#BBDEFB"
                                                            CornerRadius="4"
                                                            Padding="6,3"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Type}" 
                                                                   FontSize="11"
                                                                   Foreground="#1565C0"
                                                                   TextAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab 2: Add Holiday (Admin Only) -->
            <TabItem Header="Add Holiday" x:Name="AdminHolidayTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">

                        <!-- Holiday Name -->
                        <TextBlock Text="Holiday Name:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="HolidayNameTextBox"
                                 Height="35"
                                 FontSize="13"
                                 Padding="8"
                                 Margin="0,0,0,15"/>

                        <!-- Date -->
                        <TextBlock Text="Date:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <DatePicker x:Name="HolidayDatePicker" 
                                    Height="35"
                                    FontSize="13"
                                    Margin="0,0,0,15"/>

                        <!-- Type -->
                        <TextBlock Text="Type:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="HolidayTypeComboBox" 
                                  Height="35"
                                  FontSize="13"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Public"/>
                            <ComboBoxItem Content="Company"/>
                        </ComboBox>

                        <!-- Recurring Checkbox -->
                        <CheckBox x:Name="RecurringCheckBox" 
                                  Content="This holiday recurs annually"
                                  FontSize="13"
                                  Margin="0,0,0,15"/>

                        <!-- Description -->
                        <TextBlock Text="Description:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="HolidayDescriptionTextBox" 
                                 Height="80" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"
                                 FontSize="13"
                                 Margin="0,0,0,20"/>

                        <!-- Add Button -->
                        <Button Content="Add Holiday"
                                Click="AddHoliday_Click"
                                Style="{StaticResource ActionButton}"
                                Width="150"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
