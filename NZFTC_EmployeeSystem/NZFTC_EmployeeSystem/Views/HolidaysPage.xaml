<Page x:Class="NZFTC_EmployeeSystem.Views.HolidaysPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1000"
      Title="Holidays">

    <Page.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Info Button -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <TextBlock Text="Company Holidays" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <!-- Info Button in Header -->
                <Button Content="i"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="35"
                        Height="35"
                        Click="HelpButton_Click"
                        ToolTip="Holidays Help">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="20">

            <!-- Tab 1: View Holidays -->
            <TabItem Header="View Holidays">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Apply for Leave Button at Top -->
                    <Button Grid.Row="0"
                            Content="Apply for Leave"
                            Click="ApplyForLeave_Click"
                            Style="{StaticResource ActionButton}"
                            Width="180"
                            HorizontalAlignment="Right"
                            Margin="20,10,20,10"
                            ToolTip="Navigate to Leave Management to request time off"/>

                    <!-- Holidays Grid with Countdown Column and Delete Button -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DataGrid x:Name="HolidaysGrid"
                                  Grid.Row="0"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  CanUserAddRows="False"
                                  AlternatingRowBackground="#ECF0F1"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  Margin="20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Holiday Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="100"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="80"/>
                                <DataGridTextColumn Header="Countdown" Binding="{Binding DaysUntil}" Width="100"/>
                                <DataGridCheckBoxColumn Header="Recurring" Binding="{Binding IsRecurring}" Width="80"/>
                                <!-- Delete Button Column - Admin only -->
                                <DataGridTemplateColumn Header="Actions" Width="80" x:Name="AdminActionsColumn">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Delete"
                                                    Tag="{Binding Id}"
                                                    Click="DeleteHoliday_Click"
                                                    Style="{StaticResource DeleteButton}"
                                                    Padding="8,4"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <!-- Visual Holiday Timeline Map -->
                    <Border Grid.Row="2" 
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Margin="20,10,20,20"
                            Padding="15"
                            Background="#F8F9FA">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Timeline Header -->
                            <TextBlock Grid.Row="0"
                                       Text="Holiday Calendar Timeline"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,15"/>

                            <!-- Holiday Cards in Timeline -->
                            <ScrollViewer Grid.Row="1" 
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="HolidayTimeline">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="180" 
                                                    Height="140" 
                                                    Background="White"
                                                    BorderBrush="#3498DB"
                                                    BorderThickness="2"
                                                    CornerRadius="8"
                                                    Margin="10"
                                                    Padding="12">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0" 
                                                               Text="{Binding Name}" 
                                                               FontSize="14"
                                                               FontWeight="Bold"
                                                               Foreground="#2C3E50"
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               Margin="0,0,0,8"/>

                                                    <TextBlock Grid.Row="1" 
                                                               Text="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                                               FontSize="12"
                                                               Foreground="#7F8C8D"
                                                               TextAlignment="Center"
                                                               Margin="0,0,0,8"/>

                                                    <Border Grid.Row="2" 
                                                            Background="#E8F5E9"
                                                            BorderBrush="#4CAF50"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            Padding="8,4"
                                                            Margin="0,0,0,8">
                                                        <TextBlock Text="{Binding DaysUntil}" 
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#2E7D32"
                                                                   TextAlignment="Center"/>
                                                    </Border>

                                                    <Border Grid.Row="3" 
                                                            Background="#BBDEFB"
                                                            CornerRadius="4"
                                                            Padding="6,3"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Type}" 
                                                                   FontSize="11"
                                                                   Foreground="#1565C0"
                                                                   TextAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab 2: Add Holiday (Admin Only) -->
            <TabItem Header="Add Holiday" x:Name="AdminHolidayTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">

                        <TextBlock Text="Holiday Name:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="HolidayNameTextBox"
                                 Height="35"
                                 FontSize="13"
                                 Padding="8"
                                 MaxLength="100"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Date:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <DatePicker x:Name="HolidayDatePicker" 
                                    Height="35"
                                    FontSize="13"
                                    Margin="0,0,0,15"/>

                        <TextBlock Text="Type:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="HolidayTypeComboBox" 
                                  Height="35"
                                  FontSize="13"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Public"/>
                            <ComboBoxItem Content="Company"/>
                        </ComboBox>

                        <CheckBox x:Name="RecurringCheckBox" 
                                  Content="This holiday recurs annually"
                                  FontSize="13"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="Description:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="HolidayDescriptionTextBox" 
                                 Height="80" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"
                                 FontSize="13"
                                 MaxLength="500"
                                 Margin="0,0,0,20"/>

                        <Button Content="Add Holiday"
                                Click="AddHoliday_Click"
                                Style="{StaticResource ActionButton}"
                                Width="150"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
