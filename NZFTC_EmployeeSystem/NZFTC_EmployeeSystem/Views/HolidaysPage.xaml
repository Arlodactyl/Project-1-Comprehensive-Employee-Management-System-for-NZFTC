<Page x:Class="NZFTC_EmployeeSystem.Views.HolidaysPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Holidays">
    <!--
      HolidaysPage
      Shows a list of company holidays and, for administrators,
      provides a form to add new holidays. Dates are formatted for
      clarity and a checkbox indicates whether the holiday recurs
      annually.
    -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Holidays" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        <!-- Holidays list -->
        <DataGrid x:Name="HolidaysGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                <DataGridCheckBoxColumn Header="Recurring" Binding="{Binding IsRecurring}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Admin add holiday form -->
        <StackPanel x:Name="AdminAddPanel"
                    Grid.Row="2"
                    Orientation="Vertical"
                    Visibility="Collapsed">
            <TextBlock Text="Add Holiday" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Name:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="HolidayNameTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Date:" Width="120" VerticalAlignment="Center"/>
                <DatePicker x:Name="HolidayDatePicker" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Type:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="HolidayTypeComboBox" Width="200">
                    <ComboBoxItem Content="Public"/>
                    <ComboBoxItem Content="Company"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Recurring:" Width="120" VerticalAlignment="Center"/>
                <CheckBox x:Name="RecurringCheckBox" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Description:" Margin="0,0,0,5"/>
                <TextBox x:Name="HolidayDescriptionTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>
            <Button Content="Add Holiday"
                    Width="150"
                    Margin="0,10,0,0"
                    Click="AddHoliday_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Page>
