<Page x:Class="NZFTC_EmployeeSystem.Views.PayrollPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Payroll">

    <Page.Resources>
        <!-- Standard Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Info Button -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <TextBlock Text="Payroll Management" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <!-- Info Button in Header -->
                <Button Content="i"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="35"
                        Height="35"
                        Click="InfoButton_Click"
                        ToolTip="What is payroll?">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Tab Control for different views -->
        <TabControl Grid.Row="1" 
                    x:Name="PayrollTabControl"
                    Margin="20">

            <!-- Tab 1: All Payslips - ADMIN ONLY -->
            <TabItem Header="All Payslips (Admin)" 
                     x:Name="AllPayslipsTab">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="All Employee Payslips" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <!-- Instructions -->
                    <TextBlock Grid.Row="1"
                               Text="View and manage payslips for all employees. Search by employee name to filter results."
                               FontSize="13"
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"/>

                    <!-- Search Box -->
                    <Border Grid.Row="2"
                            Background="#F8F9FA" 
                            Padding="15"
                            CornerRadius="5"
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Search Employee:"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>

                            <TextBox Grid.Column="1"
                                     x:Name="PayslipSearchTextBox"
                                     Height="35"
                                     Padding="10,8"
                                     FontSize="13"
                                     VerticalContentAlignment="Center"
                                     TextChanged="PayslipSearchTextBox_TextChanged"/>

                            <Button Grid.Column="2"
                                    Content="Refresh"
                                    Style="{StaticResource ActionButton}"
                                    Click="RefreshPayslips_Click"
                                    Margin="10,0,0,0"
                                    Width="100"/>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="3"
                              x:Name="AllPayslipsGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              AlternatingRowBackground="#ECF0F1"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              MouseDoubleClick="AllPayslipsGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Employee" Binding="{Binding Employee.FullName}" Width="200"/>
                            <DataGridTextColumn Header="Period Start" Binding="{Binding PayPeriodStart, StringFormat=dd/MM/yyyy}" Width="120"/>
                            <DataGridTextColumn Header="Period End" Binding="{Binding PayPeriodEnd, StringFormat=dd/MM/yyyy}" Width="120"/>
                            <DataGridTextColumn Header="Gross ($)" Binding="{Binding GrossSalary, StringFormat=F2}" Width="100"/>
                            <DataGridTextColumn Header="Tax ($)" Binding="{Binding TaxDeduction, StringFormat=F2}" Width="100"/>
                            <DataGridTextColumn Header="Net ($)" Binding="{Binding NetSalary, StringFormat=F2}" Width="100"/>
                            <DataGridTextColumn Header="Generated" Binding="{Binding GeneratedDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Export Button -->
                    <Button Grid.Row="4"
                            Content="Export Visible Payslips"
                            Style="{StaticResource ActionButton}"
                            Click="ExportPayslips_Click"
                            HorizontalAlignment="Left"
                            Margin="0,15,0,0"
                            Width="200"/>

                    <!-- Generate Payslip Section -->
                    <Border Grid.Row="5"
                            Background="#F8F9FA" 
                            Padding="20"
                            CornerRadius="5"
                            Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock Text="Generate Weekly Payslip" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Select Employee:" FontSize="12" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="EmployeeComboBox"
                                              Height="35"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              DisplayMemberPath="FullName"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,10,0">
                                    <TextBlock Text="Week Ending (Sunday):" FontSize="12" Margin="0,0,0,5"/>
                                    <DatePicker x:Name="WeekEndingDatePicker"
                                                Height="35"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Orientation="Horizontal">
                                    <Button Content="Generate"
                                            Style="{StaticResource SuccessButton}"
                                            Click="GeneratePayslip_Click"
                                            Width="110"/>
                                    <Button Content="Clear"
                                            Style="{StaticResource ActionButton}"
                                            Click="ClearForm_Click"
                                            Width="110"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab 2: My Payslips - ALL USERS -->
            <TabItem Header="My Payslips" 
                     x:Name="MyPayslipsTab">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" 
                               Text="Your Payslips" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <!-- Instructions -->
                    <TextBlock Grid.Row="1"
                               Text="View your payslip history. Double-click any row to see full details."
                               FontSize="13"
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"/>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="2"
                              x:Name="MyPayslipsGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              AlternatingRowBackground="#ECF0F1"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              MouseDoubleClick="MyPayslipsGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Period Start" Binding="{Binding PayPeriodStart, StringFormat=dd/MM/yyyy}" Width="150"/>
                            <DataGridTextColumn Header="Period End" Binding="{Binding PayPeriodEnd, StringFormat=dd/MM/yyyy}" Width="150"/>
                            <DataGridTextColumn Header="Gross Salary ($)" Binding="{Binding GrossSalary, StringFormat=F2}" Width="*"/>
                            <DataGridTextColumn Header="Tax Deduction ($)" Binding="{Binding TaxDeduction, StringFormat=F2}" Width="*"/>
                            <DataGridTextColumn Header="Net Salary ($)" Binding="{Binding NetSalary, StringFormat=F2}" Width="*"/>
                            <DataGridTextColumn Header="Generated" Binding="{Binding GeneratedDate, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Export Button -->
                    <Button Grid.Row="3"
                            Content="Export My Payslips"
                            Style="{StaticResource ActionButton}"
                            Click="ExportMyPayslips_Click"
                            HorizontalAlignment="Left"
                            Margin="0,15,0,0"
                            Width="200"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
