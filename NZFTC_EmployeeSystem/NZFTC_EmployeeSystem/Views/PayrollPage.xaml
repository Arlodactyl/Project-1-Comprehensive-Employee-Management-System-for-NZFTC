<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="NZFTC_EmployeeSystem.Views.PayrollPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Payroll">
    <Page.Resources>
        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Export Button Style -->
        <Style x:Key="ExportButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Help Button Style -->
        <Style x:Key="InfoButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="17.5"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <TextBlock x:Name="PageHeaderText" Text="Payroll" FontSize="24" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Tab Control -->
        <TabControl x:Name="PayrollTabControl" Grid.Row="1">
            <TabItem x:Name="AllPayslipsTab" Header="All Payslips" FontSize="14">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="All Employee Payslips" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                        <TextBlock Text="Double-click any row to view full payslip details. Use search to filter by employee name." FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,15"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Search:" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="0,0,10,0"/>
                            <TextBox x:Name="PayslipSearchTextBox" Grid.Column="1" Style="{StaticResource ModernTextBox}" TextChanged="PayslipSearchTextBox_TextChanged"/>
                            <Button Content="Refresh" Grid.Column="2" Style="{StaticResource ActionButton}" Click="RefreshPayslips_Click" Margin="10,0,0,0"/>
                        </Grid>
                        <DataGrid x:Name="AllPayslipsGrid" Height="300" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False" AlternatingRowBackground="#ECF0F1" Margin="0,0,0,15" MouseDoubleClick="AllPayslipsGrid_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Employee" Binding="{Binding Employee.FullName}" Width="150"/>
                                <DataGridTextColumn Header="Start" Binding="{Binding PayPeriodStart, StringFormat=dd/MM/yyyy}" Width="100"/>
                                <DataGridTextColumn Header="End" Binding="{Binding PayPeriodEnd, StringFormat=dd/MM/yyyy}" Width="100"/>
                                <DataGridTextColumn Header="Gross" Binding="{Binding GrossSalary, StringFormat=C}" Width="100"/>
                                <DataGridTextColumn Header="Tax" Binding="{Binding TaxDeduction, StringFormat=C}" Width="100"/>
                                <DataGridTextColumn Header="Net" Binding="{Binding NetSalary, StringFormat=C}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Button Content="Export Visible Payslips" Style="{StaticResource ExportButton}" Click="ExportPayslips_Click" Margin="0,0,10,0"/>
                            <TextBlock Text="Tip: Use search to filter, then export only those results" VerticalAlignment="Center" FontSize="11" Foreground="#7F8C8D" FontStyle="Italic"/>
                        </StackPanel>
                        <Border BorderBrush="#BDC3C7" BorderThickness="1" Padding="20" Background="#F8F9FA" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Generate Weekly Payslip" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>
                                <TextBlock Text="Employee *" FontSize="12" Margin="0,0,0,3"/>
                                <ComboBox x:Name="EmployeeComboBox" Style="{StaticResource ModernComboBox}" DisplayMemberPath="FullName" SelectedValuePath="Id" IsEditable="True" IsTextSearchEnabled="True" Margin="0,0,0,10"/>
                                <TextBlock Text="Week Ending *" FontSize="12" Margin="0,0,0,3"/>
                                <DatePicker x:Name="WeekEndingDatePicker" Height="32" FontSize="13" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Generate" Style="{StaticResource ActionButton}" Click="GeneratePayslip_Click"/>
                                    <Button Content="Clear" Style="{StaticResource ActionButton}" Background="#95A5A6" Click="ClearForm_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="MyPayslipsTab" Header="My Payslips" FontSize="14">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="My Payslips" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                        <TextBlock Text="Double-click any row to view full payslip details." FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,15"/>
                        <DataGrid x:Name="MyPayslipsGrid" Height="400" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False" AlternatingRowBackground="#ECF0F1" Margin="0,0,0,15" MouseDoubleClick="MyPayslipsGrid_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Period Start" Binding="{Binding PayPeriodStart, StringFormat=dd/MM/yyyy}" Width="120"/>
                                <DataGridTextColumn Header="Period End" Binding="{Binding PayPeriodEnd, StringFormat=dd/MM/yyyy}" Width="120"/>
                                <DataGridTextColumn Header="Gross" Binding="{Binding GrossSalary, StringFormat=C}" Width="100"/>
                                <DataGridTextColumn Header="Tax" Binding="{Binding TaxDeduction, StringFormat=C}" Width="100"/>
                                <DataGridTextColumn Header="Net" Binding="{Binding NetSalary, StringFormat=C}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Export My Payslips" Style="{StaticResource ExportButton}" Click="ExportMyPayslips_Click" HorizontalAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Help Button - Bottom Right Corner -->
        <Button Grid.Row="1"
                Content="i"
                Style="{StaticResource InfoButton}"
                Click="InfoButton_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                ToolTip="Payroll Information &amp; Help"/>
    </Grid>
</Page>
