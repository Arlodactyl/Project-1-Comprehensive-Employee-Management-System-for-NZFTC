<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="NZFTC_EmployeeSystem.Views.Contact_AboutUsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NZFTC_EmployeeSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Contact_AboutUsPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Background="White">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#34495E" Padding="20">
                <Grid>
                    <TextBlock Text="Contact / About Us " 
                               FontSize="24" 
                               FontWeight="Black" 
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <!-- Help Button in Header -->
                    <Button Content="i"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="35"
                            Height="35"
                            Click="HelpButton_Click"
                            ToolTip="Contact/About Help">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2980B9"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Header (All users can View) -->
                <TextBlock Grid.Row="1" Text="Support Announcements" 
                   FontWeight="ExtraBlack" HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   FontSize="30"/>
                <!-- This block will be editable -->
                <TextBlock x:Name="TitleText" Grid.Row="2" Text="SERVICE DOWNTIME ANNOUNCEMENT" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                    FontSize="20" Foreground="Red" FontWeight="Normal" Visibility="Visible" Tag="Active" />
                <TextBox x:Name="TitleEdit" Visibility="Collapsed" Grid.Row="2" Text="Edit Title . . . " VerticalAlignment="Center" FontSize="20" Foreground="Red" FontWeight="Normal" HorizontalAlignment="Center" Tag="Active" />
                <!-- This block will be editable -->
                <TextBlock x:Name="ContextText" Grid.Row="3" Text="This is only just a course project" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                    FontSize="16" FontWeight="Normal" Visibility="Visible"/>
                <TextBox x:Name="ContextEdit" Visibility="Collapsed" Grid.Row="3" Text="Edit Context. . . " VerticalAlignment="Top" FontSize="16" FontWeight="Normal" HorizontalAlignment="Center" Tag="Active"/>

            </Grid>

            <Grid Grid.Row="2" Margin="50,10,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="1" FontSize="24" Text="Support Email : " FontStyle="Italic" FontWeight="Light"  VerticalAlignment="Bottom"/>
                <TextBlock x:Name="SupportEmailDisplay" Visibility="Visible" Grid.Row="1" Grid.Column="2" Text="support@NZFTC.com" FontStyle="Italic" FontWeight="Light" VerticalAlignment="Bottom" FontSize="24"/>
                <TextBox x:Name="SupportEmailEditBox" Grid.Row="1" Grid.Column="1" Text="Text" Visibility="Collapsed" HorizontalAlignment="Left" FontSize="24" Width="350" VerticalAlignment="Bottom" FontStyle="Italic" FontWeight="Light" Tag="Active"/>

                <TextBlock Grid.Row="2" FontSize="24" Text="Admin Email : " FontStyle="Italic" FontWeight="Light"  VerticalAlignment="Center"/>
                <TextBlock x:Name="AdminEmailDisplay" Visibility="Visible" Grid.Row="2" Grid.Column="2" Text="admin@NZFTC.com" FontStyle="Italic" FontWeight="Light" VerticalAlignment="Center" FontSize="24"/>
                <TextBox x:Name="SupportAdminEditlBox" Grid.Row="2" Visibility="Collapsed" Grid.Column="1" Text="Text" HorizontalAlignment="Left" FontSize="24" Width="350" VerticalAlignment="Center" FontStyle="Italic" FontWeight="Light" Tag="Active"/>

                <TextBlock Grid.Row="3" FontSize="24" Text="Support Number : " FontStyle="Italic" FontWeight="Light"  VerticalAlignment="Top" Width="Auto"/>
                <TextBlock x:Name="SupportNumberDisplay" Visibility="Visible" Grid.Row="3" Grid.Column="2" Text="0800-123-666" FontStyle="Italic" FontWeight="Light" VerticalAlignment="Top" FontSize="24"/>
                <TextBox x:Name="SupportNumberEditBox" Grid.Row="3" Visibility="Collapsed" Grid.Column="1" Text="Text" HorizontalAlignment="Left" FontSize="24" Width="350" VerticalAlignment="Top" FontStyle="Italic" FontWeight="Light" Tag="Active"/>
            </Grid>

            <Grid Grid.Row="3" Margin="50,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="Company Information" FontSize="24" FontWeight="Black" Height="Auto"/>

                <TextBlock Grid.Row="2" Text="Company Name : " HorizontalAlignment="Right" FontSize="16" FontWeight="Bold"/>
                <TextBlock x:Name="CompanyNameDisplay" Grid.Row="2" Grid.Column="1" Visibility="Visible"  Text="New Zealand Finance and Trade Company (NZFTC)" FontSize="16" HorizontalAlignment="Left" Tag="Active"/>
                <TextBox x:Name="CompanyNameEdit" Grid.Row="2" Grid.Column="1" Visibility="Collapsed" Text="Change Company Name . . ." HorizontalAlignment="Left" FontSize="16" Width="350" Tag="Active" />

                <TextBlock Grid.Row="3" Text="Address : " HorizontalAlignment="Right" FontSize="16"/>
                <TextBlock x:Name="AddressDisplay" Grid.Row="3" Grid.Column="1" Visibility="Visible" Text="Level 4, 3 City Road Auckland 1010" FontSize="16" HorizontalAlignment="Left" Tag="Active"/>
                <TextBox x:Name="AddressDisplayEdit" Grid.Row="3" Grid.Column="1" Visibility="Collapsed" Text="Change Address . . ." HorizontalAlignment="Left" FontSize="16" Width="350" Tag="Active" />

                <TextBlock Grid.Row="4" Text="Business : " HorizontalAlignment="Right" FontSize="16"/>
                <TextBlock x:Name="BusinessDisplay" Grid.Row="4" Grid.Column="1" Visibility="Visible" Text="Financial and Trade Services" FontSize="16" HorizontalAlignment="Left" Tag="Active"/>
                <TextBox x:Name="BusinessEdit" Grid.Row="4" Grid.Column="1" Visibility="Collapsed" Text="Change Business. . . " HorizontalAlignment="Left" FontSize="16" Width="350" Tag="Active" />

                <TextBlock Grid.Row="5" Text="Email : " HorizontalAlignment="Right" FontSize="16"/>
                <TextBlock x:Name="EmailDisplay" Grid.Row="5" Grid.Column="1" Visibility="Visible" Text="NZFTC_Company@NZFTC.com" FontSize="16" HorizontalAlignment="Left" Tag="Active"/>
                <TextBox x:Name="EmailEdit" Grid.Row="5" Grid.Column="1" Visibility="Collapsed" Text="Change Email . . ." HorizontalAlignment="Left" FontSize="16" Width="350" Tag="Active"/>

                <TextBlock Grid.Row="6" Text="Contact Number : " HorizontalAlignment="Right" FontSize="16"/>
                <TextBlock x:Name="ContactDisplay" Grid.Row="6" Grid.Column="1" Visibility="Visible" Text="0800-123-1234" FontSize="16" HorizontalAlignment="Left" Tag="Active"/>
                <TextBox x:Name="ContactEdit"  Grid.Row="6" Grid.Column="1" Visibility="Collapsed" Text="Change Number . . ." HorizontalAlignment="Left" FontSize="16" Width="350" Tag="Active"/>

            </Grid>

            <Button x:Name="EditModeButton" Visibility="Visible" Grid.Row="3" Width="75" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,130,20" Content="Edit" BorderThickness="3" Click="EditMode" Tag="Active" Background="AliceBlue" BorderBrush="LightBlue"/>
            <Button x:Name="SaveModeButton" Visibility="Collapsed" Grid.Row="3" Width="75" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,130,20" Content="Save" BorderThickness="3" Click="SaveMode" Tag="Active" Background="AliceBlue" BorderBrush="LightBlue"/>

        </Grid>
    </ScrollViewer >
</Page>
