<Page x:Class="NZFTC_EmployeeSystem.Views.LeavePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Leave Management">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Leave Management" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Tab Control for Employee/Admin views -->
        <TabControl Grid.Row="1">
            <!-- Tab 1: Apply for Leave -->
            <TabItem Header="Apply for Leave">
                <StackPanel Margin="20">
                    <!-- Leave Type -->
                    <TextBlock Text="Leave Type:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="LeaveTypeCombo" Margin="0,0,0,15">
                        <ComboBoxItem Content="Annual Leave"/>
                        <ComboBoxItem Content="Sick Leave"/>
                        <ComboBoxItem Content="Unpaid Leave"/>
                    </ComboBox>

                    <!-- Start Date -->
                    <TextBlock Text="Start Date:" Margin="0,0,0,5"/>
                    <DatePicker x:Name="StartDatePicker" Margin="0,0,0,15"/>

                    <!-- End Date -->
                    <TextBlock Text="End Date:" Margin="0,0,0,5"/>
                    <DatePicker x:Name="EndDatePicker" Margin="0,0,0,15"/>

                    <!-- Reason -->
                    <TextBlock Text="Reason:" Margin="0,0,0,5"/>
                    <TextBox x:Name="ReasonTextBox" 
                             Height="100" 
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Margin="0,0,0,15"/>

                    <!-- Submit Button -->
                    <Button Content="Submit Leave Request"
                            Click="SubmitLeave_Click"
                            Width="200"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </StackPanel>
            </TabItem>

            <!-- Tab 2: My Leave Requests -->
            <TabItem Header="My Leave Requests">
                <DataGrid x:Name="MyLeaveGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Leave Type" Binding="{Binding LeaveType}" Width="*"/>
                        <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="*"/>
                        <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="*"/>
                        <DataGridTextColumn Header="Days" Binding="{Binding DaysRequested}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Tab 3: All Requests (Admin Only) -->
            <TabItem Header="All Leave Requests" x:Name="AdminLeaveTab">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="AllLeaveGrid"
                              Grid.Row="0"
                              AutoGenerateColumns="False"
                              SelectionMode="Single"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee" Binding="{Binding Employee.FullName}" Width="*"/>
                            <DataGridTextColumn Header="Leave Type" Binding="{Binding LeaveType}" Width="*"/>
                            <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="*"/>
                            <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="*"/>
                            <DataGridTextColumn Header="Days" Binding="{Binding DaysRequested}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Approve"
                                Click="ApproveLeave_Click"
                                Margin="0,0,10,0"
                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                        <Button Content="Reject"
                                Click="RejectLeave_Click"
                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>