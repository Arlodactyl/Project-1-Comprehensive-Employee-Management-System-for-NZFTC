<Window x:Class="NZFTC_EmployeeSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="NZFTC Employee System"
        Width="960" Height="640"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">
    <DockPanel>

        <!-- This section controls the top application bar -->
        <materialDesign:ColorZone Mode="PrimaryDark" DockPanel.Dock="Top" Padding="12">
            <TextBlock Text="NZFTC Employee System"
                 Foreground="White"
                 FontSize="16"
                 FontWeight="SemiBold"/>
        </materialDesign:ColorZone>

        <!-- This section controls the main content area -->
        <Grid Margin="16">
            <materialDesign:Card Padding="16" UniformCornerRadius="16">
                <TextBlock Text="Dashboard placeholder — add pages/routes here."
                   Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            </materialDesign:Card>
        </Grid>

    </DockPanel>
</Window>
